    <TextView
        android:id="@+id/TexteTitre1"
        android:layout_width="550dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginStart="109dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="118dp"
        android:background="@drawable/box_titre"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Liste des patients"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/btnRechPatientId"
        style="@style/SearchViewStyle"
        android:layout_width="323dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:layout_marginStart="200dp"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="50dp"
        android:id="@+id/list_separator"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/list_patients"
        app:layout_constraintTop_toBottomOf="@+id/btnRechPatientId"
        tools:layout_editor_absoluteX="-16dp" />

    <ListView
        android:id="@+id/list_patients"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_separator" />


