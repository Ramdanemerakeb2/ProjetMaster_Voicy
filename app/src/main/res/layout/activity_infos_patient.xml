<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/titre_image2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="serif"
            android:layout_marginTop="10dp"
            android:text="Informations du patient"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="500dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/box_infos" />

        <TextView
            android:layout_width="450dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/box_titre"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Informations personnelles"
            android:textColor="#1B1A1A"
            android:textSize="30dp"
            android:textStyle="bold" />

        <customfonts.MyRegulerText
            android:id="@+id/btnModification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnformate"
            android:layout_marginLeft="220dp"
            android:layout_marginRight="220dp"
            android:layout_marginTop="70dp"
            android:textAlignment="center"
            android:padding="14dp"
            android:gravity="center"
            android:text="Modifier"
            android:textSize="20dp"
            android:textColor="#fff"
            />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="500dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            app:srcCompat="@drawable/box_infos" />

        <TextView
            android:layout_width="450dp"
            android:layout_height="60dp"
            android:layout_marginTop="170dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/box_titre"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Exercices spÃ©cifiques"
            android:textColor="#1B1A1A"
            android:textSize="30dp"
            android:textStyle="bold" />

        <customfonts.MyRegulerText
            android:id="@+id/btnListerExo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnformate"
            android:layout_marginLeft="220dp"
            android:layout_marginRight="220dp"
            android:layout_marginTop="240dp"
            android:textAlignment="center"
            android:padding="14dp"
            android:gravity="center"
            android:text="Lister"
            android:textSize="20dp"
            android:textColor="#fff"
            />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="500dp"
            android:layout_height="305dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="380dp"
            app:srcCompat="@drawable/box_infos" />

        <TextView
            android:layout_width="450dp"
            android:layout_height="60dp"
            android:layout_marginTop="350dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/box_titre"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Sessions d'enregistrements"
            android:textColor="#1B1A1A"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="440dp"
            android:layout_height="190dp"
            android:layout_marginTop="420dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Type d'exercice :"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/filtrage_logatomes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Logatomes" />

                <CheckBox
                    android:id="@+id/filtrage_phrases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phrases" />

                <CheckBox
                    android:id="@+id/filtrage_texte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Texte" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Date d'enregistrement :"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <customfonts.MyEditText
                android:id="@+id/filtrage_date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="JJ/MM/AA"
                android:inputType="text"
                android:textColor="#000"
                android:background="#f0f0f4"
                android:padding="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="200dp"
                android:drawableLeft="@drawable/commentaire"
                android:drawablePadding="16dp"
                />

        </LinearLayout>

        <customfonts.MyRegulerText
            android:id="@+id/btnSessions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnformate"
            android:layout_marginLeft="190dp"
            android:layout_marginRight="190dp"
            android:layout_marginTop="615dp"
            android:textAlignment="center"
            android:padding="14dp"
            android:gravity="center"
            android:text="Recherche sessions"
            android:textSize="20dp"
            android:textColor="#fff"
            />


    </RelativeLayout>


</LinearLayout>